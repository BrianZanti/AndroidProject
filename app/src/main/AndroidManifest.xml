<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.cs4720.ms1" >
    <uses-sdk android:minSdkVersion="11"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DisplayCoords"
            android:label="@string/title_activity_display_coords" >
        </activity>

        <service
            android:name=".TrackCoords"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".NewEvent"
            android:label="@string/title_activity_new_event" >
        </activity>
    </application>

</manifest>
